<p id="notice"><%= notice %></p>


<div class="container">

<div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Wikis</h3>

    </div>
    <div class="panel-body">
     <div class="table">
      <table>
        <thead>
          <div align="center">
            <% if policy(Wiki.new).create? %>
            <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
            <% end %>
          </div>

          <div class="col-md-8">
            <tr>
              <th>Title</th>
              <th>Body</th>
              <th>Private</th>
              <th>User</th>
              <th colspan="3"></th>
            </tr>
          </div>
          </thead>
          <tbody>
            <% @wikis.each do |wiki| %>
            <tr>
              <td><%= markdown_to_html wiki.title %></td>
              <td><%= wiki.body %></td>
              <td><%= wiki.private %></td>
              <td><%= wiki.user %></td>
              <td><%= link_to 'Show', wiki,class: 'btn btn-primary'%></td>
              <td><%= link_to 'Edit', edit_wiki_path(wiki),class: 'btn btn-info' %></td>
              <td><%= link_to 'Destroy', wiki,class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
       </div>
      </div>
    </div>
<br>
</div>
